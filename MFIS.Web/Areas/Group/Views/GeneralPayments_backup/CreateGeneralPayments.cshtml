        function AddAmount() {
            var AddAmount = true;
            if ($.trim($('#DrAmount').val()) == '') {
                $('#DrAmount').css('border-color', 'red');
                AddAmount = false;
                return AddAmount;
            }
            else {
                $('#DrAmount').css('border-color', '');

