@{
    ViewBag.Title = "ContraEntryCashWithdrawlLookup";
    Layout = "~/Views/Shared/_FedarationLayout.cshtml";
}

@using BusinessEntities;
@model IEnumerable<ContraEntryDepositedLookupDto>
@using CoreComponents

@using (Html.BeginForm())
{
    var Result = TempData["Result"] as BusinessEntities.ResultDto;
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="header">Contra Entry - Cash Deposited In Bank Lookup</span>
                    <button type="button" class="btn btn-default pull-right" onclick="Addrecord();">Add New Contra Entry - Cash Deposited In Bank</button>
                </div>
                @if (Result != null && Result.ObjectId > 0 && !string.IsNullOrEmpty(Result.Message))
                {
                    <div class="alert alert-success">
                        <strong>Success!</strong> @Result.Message
                    </div>
                }
                else if (Result != null && Result.ObjectId < 0 && !string.IsNullOrEmpty(Result.Message))
                {
                    <div class="alert alert-danger">
                        <strong>Error!</strong> @Result.Message
                    </div>
                }

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th>Vocher NO</th>
                                    <th>A.C Head</th>
                                    <th class="text-right">Amount</th>
                                    <th class="text-center">Transaction Date</th>
                                    <th>Narration</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <input type="hidden" id="hdnAccountMasterID" name="AccountMasterID" value="@item.AccountMasterID" />
                                    bool isActive = item.StatusCode == Utilities.Constants.StatusCodes.Active;
                                    string inActiveTitle = isActive ? "In-Active" : "Active";
                                    string encryptAccountMasterID = item.AccountMasterID.EncryptString();
                                    string deleteTitle = "Delete";
                                    <tr class="gradeA odd">
                                        <td class="text-center">@(Model.ToList().IndexOf(item) + 1)</td>
                                        <td>@item.VoucherNumber</td>
                                        <td>@item.AHName </td>
                                        <td>@item.Amount</td>
                                        <td>@item.TransactionDate </td>
                                        <td>@item.Narration</td>
                                        <td class="text-center">
                                            <img src="~/@(isActive ? ("Content/images/Circle_Green.png") : "Content/images/Circle_Red.png")" title="@item.Status" />
                                        </td>
                                        <td class="text-center">
                                            <img src="~/Content/images/Edit.png" style="cursor: pointer" title="Edit" onclick="EditContraEntryDeposited('@encryptAccountMasterID');"/>
                                            <img style="cursor: pointer" onclick="return ActiveInactiveContraEntryDeposited('@encryptAccountMasterID', '@item.StatusCode');" src="~/@(isActive ? "Content/images/Circle_Red.png" : "Content/images/Circle_Green.png")" title="@inActiveTitle" />
                                            <img style="cursor: pointer" onclick="DeleteContraEntryDeposited('@encryptAccountMasterID');" src="~/Content/images/delete_btn1.png" title="@deleteTitle" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
    <script>
        function Addrecord() {
            window.location.href = '@Url.Content("CreateContraEntryDeposited")';
        }
    </script>
}
<link href="~/Scripts/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/Scripts/plugins/dataTables/dataTables.bootstrap.js"></script>
<script type="text/javascript">

    function EditContraEntryDeposited(id) {
        showProgress();
        window.location.href = '@Url.Content("CreateContraEntryDeposited?id=")' + id
    }
    function DeleteContraEntryDeposited(encryptAccountMasterID) {
        if (!confirm('If you continue this record will be deleted permanently \n Do you wish to continue?'))
            return false;
        showProgress();

        window.location.href = '@Url.Content("DeleteContraEntryDeposited?Id=")' + encryptAccountMasterID;
    }

    function ActiveInactiveContraEntryDeposited(encryptAccountMasterID, currentStatusCode) {
        if (!confirm(currentStatusCode == 'ACT' ? 'Do you wish to Inactive the selected record?' : 'Do you wish to active the selected record?'))
            return false;
        showProgress();
        window.location.href = '@Url.Content("ActiveInactiveContraEntryDeposited?Id=")' + encryptAccountMasterID;
    }
    function Addrecard() {
        showProgress();
        window.location.href = '@Url.Content("CreateContraEntryDeposited")';
    }
    $(document).ready(function () {
        menuLink = "menuTransactions";
        subMenuLink = "lnkSideContraEntry-CashDepositedInBank";
        LoadMenu();
        $('#dataTables-example').dataTable({
            "bSort": false
        });
    });
</script>
}