@{
    bool isGroup = ViewBag.isGroup;
    ViewBag.Title = "View Bank Details";
    if (isGroup)
    {
        Layout = "~/Views/Shared/_GroupLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_FedarationLayout.cshtml";
    }
}
@model BusinessEntities.BankMasterViewDto
@using CoreComponents;

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm())
        {
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="header">View Bank Details</span>
                  <button type="button" class="btn btn-default pull-right" onclick="BackToList();">Back To List</button>
                </div>
                <div class="panel-body">
                    <div class="col-lg-4">
                        <label>Bank Code</label>
                        @Html.TextBoxFor(model => model.BankCode, new { @class = "form-control", @readonly = "readonly" })

                        <div class="form-group">
                            <label>Bank A/C NO</label>
                            @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control", @readonly = "readonly" })
                        </div>


                        <div class="form-group">
                            <label>Branch Name</label>
                            @Html.TextBoxFor(model => model.BranchName, new { @class = "form-control", @readonly = "readonly" })
                        </div>

                        <div class="form-group">
                            <label>Contact Number</label>
                            @Html.TextBoxFor(model => model.ContactNumber, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Bank Name</label>
                            @Html.TextBoxFor(m => m.BankName, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            <label>IFSC Code</label>
                            @Html.TextBoxFor(m => m.IFSC, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            <label>Account Type</label>
                            @Html.TextBoxFor(m => m.AccountType, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            <label>ADDRESS</label>
                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
           
                <div class="panel-footer">
                    <div class="form-group" style="margin-left: 16px;margin-bottom:13px">
                        &nbsp;&nbsp;
                        <button type="button" class="btn btn-default pull-right" onclick="BackToList();">Back To List</button>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- End Form Elements -->

</div>

<script type="text/javascript">
    function BackToList() {
        showProgress();
        window.location.href = '@Url.Action("BankMasterLookup","Bank")';
       }
    $(document).ready(function () {
        menuLink = "menuOrganization";
        subMenuLink = "lnkSideBank";
        LoadMenu();
    });
</script>