        <tbody>
            @foreach (var item in Model)
            {
                bool isActive = item.Status == Utilities.Constants.StatusCodes.Active;
                string deleteTitle = isActive ? "In-Active Member" : "Active Member";
                string Gender = item.Gender == "F" ? "Female" : "Male";

                <tr class="gradeA odd">
                    <td class="text-center ">@(Model.ToList().IndexOf(item) + 1)</td>
                    <td class="">@item.MemberCode</td>
                    <td class="">@item.MemberName</td>
                    <td class="">@item.ParentGuardianName</td>
                    <td class="">@Gender</td>
                    <td class="">@item.Occupation</td>
                    <td class="">@item.DOB.ToDisplayDateFormat()</td>
                    <td class="">@item.DateOfAdmission.ToDisplayDateFormat()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
