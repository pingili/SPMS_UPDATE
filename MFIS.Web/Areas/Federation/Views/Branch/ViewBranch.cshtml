@model BusinessEntities.BranchViewDto
@using CoreComponents;
@{
    ViewBag.Title = "ViewBranch";
    Layout = "~/Views/Shared/_FedarationLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!-- Form Elements -->
        <div class="panel panel-primary">
            <div class="panel-heading">
                <span class="header">View Branch Details</span>
                <button type="button" class="btn btn-default pull-right" onclick="BackToList();">Back To List</button>
            </div>
            <div class="panel-body">
                <div class="col-lg-6" readonly="readonly">
                    <div class="form-group">
                        <label>Branch Code</label>
                        @Html.TextBoxFor(m => Model.BranchCode, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label>Branch Name</label>
                        @Html.TextBoxFor(m => Model.BranchName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label>Branch Telugu Name</label>
                        @Html.TextBoxFor(m => Model.TEBranchName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="form-group">
                        <label>Branch Start Date</label>
                        @Html.TextBox("StartDate", Model.StartDate.ToDisplayDateFormat(), new { @class = "form-control", @readonly = "readonly" })
                    </div>
                   
                </div>
                <div class="col-lg-6">
                     <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong>Contact Details</strong>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label>Email </label>
                                @Html.TextBoxFor(m => Model.Email, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                @Html.TextBoxFor(m => Model.Phone, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                @Html.TextAreaFor(m => Model.Address, new { @class = "form-control", @readonly = "readonly", @rows = "3" })
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
            <div class="panel-footer">
                <div class="form-group" style="margin-left: 16px;margin-bottom:13px">     
                    &nbsp; &nbsp;          
                    <button type="button" class="btn btn-default pull-right" onclick="BackToList();">Back To List</button>
                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>
</div>
<script type="text/javascript">
    function BackToList() {
        showProgress();
        window.location.href = 'BranchLookUp';
    }
</script>