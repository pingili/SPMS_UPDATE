
@BusinessEntities.ResultDto resultDto=ViewBag.Result;

@if (resultDto != null && resultDto.ObjectId > 0 && !string.IsNullOrEmpty(resultDto.Message))
{
    <div class="alert alert-success">
        <strong>Success!</strong> Indicates a successful or positive action.
    </div>
}
else if (resultDto != null && resultDto.ObjectId < 0 && !string.IsNullOrEmpty(resultDto.Message))
{
    <div class="alert alert-danger">
        <strong>Error!</strong> Indicates a dangerous or potentially negative action.
    </div>
}

