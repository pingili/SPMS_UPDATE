                            </thead>
                            <tbody>
                                <tr>
                                    <td class="text-center">AH CODE</td>
                                    <td class="text-center">ACCOUNT HEAD NAME</td>
                                    <td class="text-center">DEBIT</td>
                                    <td class="text-center">CREDIT</td>
                                    <td class="text-center">DEBIT</td>
                                    <td class="text-center">CREDIT</td>
                                    <td class="text-center">DEBIT</td>
                                    <td class="text-center">CREDIT</td>
                                </tr>
                                <tr>
