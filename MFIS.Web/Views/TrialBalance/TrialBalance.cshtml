                                    <td class="text-center"></td>
                                    <td class="text-center"></td>
                                    <td class="text-center"></td>
                                    <td class="text-center"></td>
                                    <td class="text-center"></td>
                                </tr>


                            </tbody>
                        </table>
                    </div>
                    
                </div>
                <div class="panel-footer">
                    <button type="button" id="cmd" class="btn btn-default pull-right" onclick="DownloadPdf();">Download as PDF</button>
                    <button type="button" class="btn btn-default pull-right" onclick="DownloadPdf();">Convert To Excel Format</button>
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    function GetPdf()
    {
        window.location.href = '@Url.Content("~/Reports/FinancialRports/TrialBalance.rpt")';

    }
</script>
