@{
    ViewBag.Title = "Role";
    Layout = "~/Views/Shared/_FedarationLayout.cshtml";
}
<div class="row"> 

    <div class="col-lg-12">
@model BusinessEntities.RoleDto
 
 @using (Html.BeginForm())
{
     
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="header">Role Creation</span>
<button type="button" class="btn btn-default pull-right" onclick="BackToList();">Back To List</button>
                </div>

                @if (ViewBag.Result != null && ViewBag.Result.ObjectId > 0 && !string.IsNullOrEmpty(ViewBag.Result.Message))
                {
                    <div class="alert alert-success">
                        <strong>Success!</strong> @ViewBag.Result.Message
                    </div>
                }
                else if (ViewBag.Result != null && ViewBag.Result.ObjectId < 0 && !string.IsNullOrEmpty(ViewBag.Result.Message))
                {
                    <div class="alert alert-danger">
                        <strong>Error!</strong> @ViewBag.Result.Message
                    </div>
                }     
           <div class="panel-body">
            <div class="col-lg-4">
                <div class="form-group">
                    <span>Role Name </span>
                    @*@Html.TextBox("RoleName",string.Empty, new { @class="form-control",@ID="RoleName"})*@
                    @Html.TextBoxFor(m=>m.RoleName, new { @class="form-control",@ID="RoleName"})
                    @*<input type="text" id="RoleName" class="form-control" name="RoleName" Placeholder="Enter Role Name.." />*@
                </div>
                <div class="form-group">
                    <span>Role Code </span>
                    @*<input type="text" id="RoleCode" class="form-control" name="RoleCode" placeholder="Enter Role Code.." />*@
                    @Html.TextBoxFor(m=>m.RoleCode, new { @class="form-control",@ID="RoleCode"})
                    @Html.HiddenFor(m =>m.RoleId, new { @class="form-control",@ID="RoleId"})
                </div>
            </div>

        </div>
        <div class="panel-footer">
            <div class="form-group" style="margin-left: 16px;">
                @*<input type="submit" id="btnSave" class="btn btn-outline btn-primary" value="Save" />*@
                <button type="submit" id="btnSave" class="btn btn-outline btn-primary">Save</button>

                <button type="button" class="btn btn-default pull-right" onclick="BackToList();">Back To List</button>
            </div>
        </div>
    </div>
}
    </div>
    </div>
<link href="~/Scripts/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/Scripts/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="~/Scripts/jquery/jquery-1.7.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        menuLink = "menuUtilities";
        subMenuLink = "lnkSideRole";
        LoadMenu();
        $('#dataTableRoles').dataTable({
            "bSort": false
        });
    });
    function BackToList() {
        window.location.href = '@Url.Content("RolesLookUp")';
    }
</script>
