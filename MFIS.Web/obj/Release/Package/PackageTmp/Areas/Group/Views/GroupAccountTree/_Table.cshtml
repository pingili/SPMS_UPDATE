@using System.Data
@model DataTable

@*<table class="table table-striped table-bordered table-hover" id="tbldepositobdetails">*@
<table class="" id="tbldepositobdetails">
    <thead>
        <tr>
            <th class="text-center">#</th>
            @* <th>GroupName</th>*@
            @foreach (var column in Model.Columns)
            {
                <th>@column</th>
            }
        </tr>
    </thead>
    <tbody>

        @{
            int index = 1;
            foreach (DataRow dr in Model.Rows)
            {
            
            <tr class="@dr[0].ToString()">
                <td>@index</td>
                @foreach (DataColumn columname in Model.Columns)
                {
                    
                    <td>@dr[columname.ColumnName].ToString()</td>
                    
                }


            </tr>
                index = index + 1;
            }
        }
    </tbody>
</table>
<style>
    tr.ASSETS {
        background-color: lightblue;
    }

    tr.LIABILITIES {
        background-color: rgba(255, 160, 122, 0.25);
    }

    tr.INCOME {
        background-color: rgba(102, 153, 238, 0.45);
    }

    tr.EXPENDITURE {
        background-color: lightgoldenrodyellow;
    }

    table#tbldepositobdetails {
        width: 100%;
        border: solid 1px #c0c0c0;
    }

        table#tbldepositobdetails td, table#tbldepositobdetails th {
            border: solid 1px #c0c0c0;
            padding: 0 2px 0;
        }

        table#tbldepositobdetails thead tr {
            background-color: #4e9af0;
            color: white;
        }
</style>
