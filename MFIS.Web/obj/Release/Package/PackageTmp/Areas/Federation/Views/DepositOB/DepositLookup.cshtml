@model List<BusinessEntities.DepositOBLookup>

@{
    ViewBag.Title = "DepositLookup";
    Layout = "~/Views/Shared/_GroupLayout.cshtml";
}
@using (Html.BeginForm())
{ 

     <div class="row">
        <div class="col-lg-12">
            <!-- Form Elements -->
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="header">DepositOB Lookup</span>
                    <button type="button" class="btn btn-default pull-right" onclick="AddDepositOB();">Add New Deposit OB</button>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="tbldepositobdetails">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th>GroupName</th>
                                    <th>SLAccountNumber</th>
                                    <th>DepositAmount</th>
                                    <th>InterestDue </th>
                                    <th>Interest</th>
                                    <th>MonthlyDemand</th>
                                    <th>ROI</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    
                                    <tr class="gradeA odd">
                                        <td class="text-center">@(Model.IndexOf(item) + 1) </td>
                                        <td><input type="hidden" value="@item.GroupId"/>
                                            @item.GroupName</td>
                                        <td>@item.SLAccountNumber</td>
                                        <td>@item.DepositAmount</td>
                                        <td>@item.InterestDue</td>
                                        <td>@item.Interest</td>
                                        <td>@item.MonthlyDemand</td>
                                        <td>@item.ROI</td>
                                        <td class="text-center">
                                            <img src="~/Content/images/Edit.png" style="cursor: pointer" title="Edit" onclick="editrecord('@item.GroupId');"/>
                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!-- End Form Elements -->
        </div>
    </div>

}
<link href="~/Scripts/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/Scripts/plugins/dataTables/dataTables.bootstrap.js"></script>
<script>
    function AddDepositOB() {
        showProgress();
        window.location.href = '@Url.Content("GetDepositOB")';
    }

    function editrecord(id) {
        showProgress();
        window.location.href = '@Url.Content("GetDepositOB?id=")' + id;
    }


    $(document).ready(function () {
        menuLink = "menuTransaction";
        subMenuLink = "lnkSideDepositOB";
        LoadMenu();
        $('#tbldepositobdetails').dataTable({
            "bSort": false
        });
    });
</script>