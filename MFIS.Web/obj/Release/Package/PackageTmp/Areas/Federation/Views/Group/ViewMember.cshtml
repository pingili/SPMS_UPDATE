@using BusinessEntities
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th class="text-center">#</th>
                <th>Member ID</th>
                <th>Member Name</th>
                <th>Spouse Name</th>
                <th>Gender</th>
                <th>Occupation</th>
                <th>DOB</th>
                <th>DOJ</th>
                <th class="text-center">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                bool isActive = item.Status == Utilities.Constants.StatusCodes.Active;
                string deleteTitle = isActive ? "In-Active Member" : "Active Member";
                                    
                <tr class="gradeA odd">
                    <td class="text-center ">@(Model.ToList().IndexOf(item) + 1)</td>
                    <td class="">@item.MemberID</td>
                    <td class="">@item.MemberName</td>
                    <td class="">@item.ParentGuardianName</td>
                    <td class="">@item.Gender</td>
                    <td class="">@item.Occupation</td>
                    <td class="">@item.DOB</td>
                    <td class="">@item.DateOfAdmission</td>
                    <td class="text-center">
                        <img src="@(isActive ? ("/Content/images/Circle_Green.png") : "/Content/images/Circle_Red.png")" title="@item.Status" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>