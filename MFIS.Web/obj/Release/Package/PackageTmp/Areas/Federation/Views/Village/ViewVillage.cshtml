@model BusinessEntities.VillageViewDto
@using CoreComponents;

@{
    ViewBag.Title = "ViewVillage";
    Layout = "~/Views/Shared/_FedarationLayout.cshtml";
}

@using (Html.BeginForm())
{ 
    <div class="row">
        <div class="col-lg-12">

            <!-- Form Elements -->
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="header">Village/Town Details</span>
                    <button type="button" class="btn btn-default pull-right" onclick="BackToList();">Back To List</button>
                </div>
                <div class="alert alert-success" id="divSuccess" style="display: none">
                </div>

                <div class="alert alert-danger" id="divError" style="display: none">
                </div>

                <div class="panel-body">
                    <div class="col-lg-4">
                        <div class="form-group">
                            Village Code
                                @Html.TextBoxFor(m => m.VillageCode, null, new { @class = "form-control", @readonly = "readonly" })
                        </div>

                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.State)
                            @Html.TextBoxFor(m => m.State, null, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(c => c.District)
                            @Html.TextBoxFor(m => m.District, null, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Mandal)
                            @Html.TextBoxFor(m => m.Mandal, null, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Cluster)
                            @Html.TextBoxFor(m => m.Cluster, null, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.Village)
                            @Html.TextBoxFor(m => m.Village, null, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group">
                            Village Name(Telugu)
                            @Html.TextBoxFor(m => m.TEVillageName, null, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="form-group" style="margin-left: 16px; margin-bottom: 13px">
                        &nbsp;&nbsp;
                    <div class="form-group" style="margin-left: 16px;">
                        <div class="form-group" style="margin-left: 16px; height: 30px;">
                            <button type="button" class="btn btn-default pull-right" onclick="BackToList();">Back To List</button>
                        </div>
                        <!-- End Form Elements -->
                    </div>
                    </div>

                </div>
                <!-- end page-wrapper -->

            </div>
            <script>
                function BackToList() {
                    showProgress();
                    window.location.href = '@Url.Content("VillageLookup")';
        }
        $(document).ready(function () {
            menuLink = "menuOrganization";
            subMenuLink = "lnkSideVillageTown";
            LoadMenu();
        });
            </script>
        </div>

    </div>
}