            $.post('@Url.Action("GetAHID")' + '/' + Id, { isfederation: true },
               function (data) {
                   $('#AccountHeadId').val(data.AHID)
                   $('#AccountName').html(data.AccountName);
                   $('#AccountCode').html(data.AHCode);
                   ViewBalanceSummary();
               }, 'json');

