                        @if (Model.OrgID > 0)
                        {
                            <div class="form-group">
                                @*<label>Federation Code</label>*@
                                <label>@Html.DisplayNameFor(m => m.OrgCode)</label>
                                @Html.TextBoxFor(m => Model.OrgCode, new { @id = "OrgCode", @class = "form-control", maxlength = "3", @readonly = "readonly" })

                            </div>
                        }
                        <div class="form-group">
                            <label>@Html.DisplayNameFor(m => m.OrgName)</label>
