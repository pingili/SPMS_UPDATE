                            <label>@Html.DisplayNameFor(m => m.TEOrgName)</label>
                            @Html.TextBoxFor(m => Model.TEOrgName, new { @class = "form-control alphabet-only", @placeholder = " Enter TeluguOrganization Name", maxlength = "512" })

