                }
                else {
                    $('#divError').html('<strong>Error!</strong>' + data.Message);
                    $('#divError').show();
                    $('#divSuccess').hide();
                }
            }
        });*@
    }
    </script>
    <script src="~/Scripts/Common/Common.js"></script>
}
